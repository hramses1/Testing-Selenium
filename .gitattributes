# Normalizar los finales de línea para todos los archivos de texto
* text=auto

# Archivos de código fuente de Python
*.py linguist-language=Python

# Archivos de configuración y scripts de shell
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf

# Archivos de markdown
*.md text eol=lf

# Archivos de Jupyter Notebook
*.ipynb linguist-language=Jupyter Notebook

# Archivos de imágenes (tratados como binarios)
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.svg binary

# Archivos de fuentes (tratados como binarios)
*.eot binary
*.otf binary
*.ttf binary
*.woff binary
*.woff2 binary

# Archivos de empaquetado
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary

# Archivos de documentos
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary
*.ppt binary
*.pptx binary

# Archivos de audio
*.mp3 binary
*.wav binary

# Archivos de video
*.mp4 binary
*.mov binary
*.avi binary

# Archivos de modelos 3D
*.obj binary
*.fbx binary
*.dae binary
*.stl binary

# Configuración específica de Windows
*.bat text eol=crlf

# Configuración específica de Unix/Linux
*.sh text eol=lf

# Archivos de texto (normalización de EOL)
*.txt text eol=lf

# Otros archivos binarios
*.exe binary
*.dll binary
*.so binary
